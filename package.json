{
  "name": "mood-friend",
  "dependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@greenlabs/res-tailwindcss": "^0.1.12",
    "@pandacss/dev": "^0.17.0",
    "@rescript/core": "^0.5.0",
    "@rescript/react": "^0.11.0",
    "@solana/web3.js": "experimental",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "helius-sdk": "^1.2.1",
    "postcss": "^8.4.31",
    "rescript": "^10.1.4",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3"
  },
  "scripts": {
    "dev": "bun res:build && concurrently --raw \"bun res:dev\" \"bun web:dev\" \"bun api:dev\"",
    "clean": "bun res:clean && rm -rf ./node_modules",
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript build -w",
    "web:dev": "cd packages/web && bun dev",
    "web:build": "cd packages/web && bun build",
    "web:start": "cd packages/web && bun start",
    "api:dev": "cd packages/api && bun run ./MoodApi.bs.js",
    "init-local-ssl": "mkdir -p ./https-cert; openssl req -x509 -out ./https-cert/localhost.pem -new -nodes -keyout ./https-cert/localhost-key.pem -newkey rsa:2048  -subj '/C=US/ST=California/L=San Francisco/O=MyOrg/OU=MyDept/CN=localhost';",
    "postinstall": "cd /Users/logandeancall/code/mood-friend/node_modules/@greenlabs/res-tailwindcss/ && chmod +x ppx-osx.exe"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
